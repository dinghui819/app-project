
.goods-lists{
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	-webkit-flex-wrap: wrap;
	        flex-wrap: wrap;
	-webkit-box-pack: justify;
	-webkit-justify-content: space-between;
	        justify-content: space-between;
	padding: 0 15rpx;
}
.goods-lists .goods-item{
	width: 49%;
	background: #fff;
	margin: 10rpx 0;
	padding: 15rpx;
}
.goods-item image{
	width: 80%;
	height: 150px;
	/* 下面这两行代码，设置图片居中 */
	display: block;
	margin: auto;
}
.goods-item .price{
	color: #ff2d52;
	font-size: 36rpx;
}
.goods-item .price text:nth-child(2) {
	color: #ccc;
	font-size: 28rpx;
	margin-left: 7rpx;
	text-decoration: line-through;
}
.goods-item .goods-name{
	font-size: 28rpx;
	line-height: 50rpx;
	padding-bottom: 15rpx;
	padding-top: 10rpx;
}

